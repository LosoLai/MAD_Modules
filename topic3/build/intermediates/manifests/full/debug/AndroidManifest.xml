            android:name="mad.topic3.tab.HelloTabWidgetActivity"
            android:label="@string/tab_activity_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
