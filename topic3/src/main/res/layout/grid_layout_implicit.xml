<?xml version="1.0" encoding="utf-8"?>
<!-- example from http://stackoverflow.com/questions/11863329/gridlayout-and-row-column-span-woe -->
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    grid:columnCount="9"
    grid:orientation="horizontal"
    grid:rowCount="8"
    tools:ignore="HardcodedText" > <!-- Added by Caspar to IGNORE LINT WARNINGS -->

    <Button
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill"
        grid:layout_rowSpan="2"
        android:text="1"
         />

    <Button
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill_horizontal"
        android:text="2" />

    <Button
        grid:layout_gravity="fill_vertical"
        grid:layout_rowSpan="4"
        android:text="3" />

    <Button
        grid:layout_columnSpan="3"
        grid:layout_gravity="fill"
        grid:layout_rowSpan="2"
        android:text="4" />

    <Button
        grid:layout_columnSpan="3"
        grid:layout_gravity="fill_horizontal"
        android:text="5" />

    <Button
        grid:layout_columnSpan="2"
        grid:layout_gravity="fill_horizontal"
        android:text="6" />

    <!-- these Space widgets set the size of the cells (for all rows and columns) -->

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="0"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="1"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="2"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="3"
        grid:layout_row="7" />

    <!-- NOTE: this one has no effect since the "3" button is wider than 36dp -->

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="4"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="5"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="6"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_width="36dp"
        grid:layout_column="7"
        grid:layout_row="7" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="0" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="1" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="2" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="3" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="4" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="5" />

    <android.support.v7.widget.Space
        android:layout_height="36dp"
        grid:layout_column="8"
        grid:layout_row="6" />

</android.support.v7.widget.GridLayout>